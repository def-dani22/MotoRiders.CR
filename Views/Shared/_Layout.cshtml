    <!-- Navbar de Bootstrap -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue sticky-top">
        <div class="container">
            <img src="~/Content/Imagenes/ima.png" class="inicio-icono" alt="Logo de la empresa">
            <span class="logo-text">MotoRiders</span>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <div class="container">
                    <input class="label-check" id="label-check" type="checkbox">
                    <label for="label-check" class="hamburger-label">
                        <div class="line1"></div>
                        <div class="line2"></div>
                        <div class="line3"></div>
                    </label>
                </div>
            </button>


            @*El primero parametro es el nombre del boton, wel segundo el index de la carpeta de la vista del tercer parametro*@
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        @*<a href="#" id="motosBtn" class="btn-link">Motos</a>*@
                        @Html.ActionLink("Motos", "Index", "Producto", new { area = "" }, new { @class = "btn-link" })
                    </li>
                    <li class="nav-item">
                        @*<a href="#" id="cuadraciclosBtn" class="btn-link">Cuadraciclos</a>*@
                        @Html.ActionLink("Cuadraciclos", "Index", "Cuadraciclo", new { area = "" }, new { @class = "btn-link" })
                    </li>
                    <li class="nav-item">
                        @*<a href="#" id="motosElectricasBtn" class="btn-link">Motos Eléctricas</a>*@
                        @Html.ActionLink("Motos Eléctricas", "Index", "MotosElectricas", new { area = "" }, new { @class = "btn-link" })
                    </li>
                    <li class="nav-item">
                        @*<a href="#" id="repuestosBtn" class="btn-link">Repuestos</a>*@
                        @Html.ActionLink("Repuestos", "Index", "Repuestos", new { area = "" }, new { @class = "btn-link" })
                    </li>
                    <li class="nav-item">
                        @*<a href="#" id="tallerBtn" class="btn-link">Taller</a>*@
                        @Html.ActionLink("Taller", "Index", "Talleres", new { area = "" }, new { @class = "btn-link" })
                    </li>
                    <li class="nav-item">
                        @*<a href="#" id="contactoBtn" class="btn-link">Contacto</a>*@
                        @Html.ActionLink("Contacto", "Index", "Contacto", new { area = "" }, new { @class = "btn-link" })
                    </li>
                    <li class="nav-item">
                        @*<a href="#" id="contactoBtn" class="btn-link">Contacto</a>*@
                        @Html.ActionLink("Carrito", "Index", "CarritoCompra", new { area = "" }, new { @class = "btn-link" })
                    </li>
                    <li class="nav-item">
                        @*<a href="#" id="contactoBtn" class="btn-link">Contacto</a>*@
                        @Html.ActionLink("Perfil", "MiPerfil", "Cuenta", new { area = "" }, new { @class = "btn-link" })
                    </li>
                    @*<a href="#" id="cotizarBtn" class="btn btn-primary">Cotizar</a>*@
                    @Html.ActionLink("Cotizar", "Nueva", "Prueba", new { }, new { @class = "btn btn-primary", id = "cotizarBtn" })




                </ul>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@




    </div>

    <!-- Footer -->
    <footer class="mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4" style="color: white;">
                    <h5>Contacto</h5>
                    <p>Dirección: San Jose, San Pedro, frente Plaza San Pedro</p>
                    <p>Teléfono: (506) 2211 8000</p>
                    <p>Email: MridersCr@gmail.com</p>
                </div>
                <div class="col-md-4">
                    <h5>Síguenos</h5>
                    <a href="#" id="facebookBtn" class="btn btn-link">Facebook</a>
                    <a href="#" id="twitterBtn" class="btn btn-link">Twitter</a>
                    <a href="#" id="instagramBtn" class="btn btn-link">Instagram</a>
                </div>
                <div class="col-md-4" style="color: white;">
                    <p>Mantente actualizado de nuestros eventos y promociones. Suscríbete!.</p>
                    <form>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Correo electrónico">
                        </div>
                        <button type="submit" class="btn btn-info btn-sm">Suscribirse</button>
                    </form>
                </div>
            </div>
        </div>
    </footer>


