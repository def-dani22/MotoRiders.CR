

@model MotoRiders.CR.Models.ResponderPreguntaSeguridadModel
@{

    ViewBag.Title = "ResponderPreguntaSeguridad";
}

<h2>Responder pregunta de seguridad</h2>
<p>@ViewBag.Pregunta</p>

@using (Html.BeginForm("ResponderPreguntaSeguridad", "Cuenta", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Respuesta, "Respuesta", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Respuesta, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.Respuesta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enviar" class="btn btn-primary" />
        </div>
    </div>
}
