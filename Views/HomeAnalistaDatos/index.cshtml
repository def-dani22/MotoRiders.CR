                        @*<a href="#" id="contactoBtn" class="btn-link">Contacto</a>*@
                        @Html.ActionLink("Reporte Prueba Manejo", "Index", "ReportePruebaManejo", new { area = "" }, new { @class = "btn-link" })
                    </li>
                    <li class="nav-item">
                        @*<a href="#" id="contactoBtn" class="btn-link">Contacto</a>*@
                        @Html.ActionLink("Auditorias", "Index", "Auditoria", new { area = "" }, new { @class = "btn-link" })
