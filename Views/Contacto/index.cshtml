@model List<MotoRiders.CR.Models.Contacto>

@{
    ViewBag.Title = "Lista de Contactos";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Sucursales</h2>
            <div class="table-responsive">
                <table id="TablaSDSucursales" class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Provincia</th>
                            <th>Teléfono</th>
                            <th>WhatsApp</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contacto in Model.Take(7))
                        {
                            <tr>
                                <td>@contacto.Id</td>
                                <td>@contacto.Provincia</td>
                                <td>@contacto.Telefono</td>
                                <td>@contacto.Whatsapp</td>
                                <td>@contacto.Correo</td>
                                <td>@contacto.Direccion</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Distribuidores</h2>
            <div class="table-responsive">
                <table id="TablaSDDistribuidores" class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Provincia</th>
                            <th>Teléfono</th>
                            <th>WhatsApp</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contacto in Model.Skip(7))
                        {
                            <tr>
                                <td>@contacto.Id</td>
                                <td>@contacto.Provincia</td>
                                <td>@contacto.Telefono</td>
                                <td>@contacto.Whatsapp</td>
                                <td>@contacto.Correo</td>
                                <td>@contacto.Direccion</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Enlaces a Bootstrap JS y Popper.js (requeridos para algunos componentes de Bootstrap) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<!-- Enlace al archivo JavaScript personalizado -->
<script src="script.js"></script>
